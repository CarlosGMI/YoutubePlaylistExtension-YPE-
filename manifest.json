{
    "name": "YPE",
	"version": "0.1",
    "manifest_version": 2,
    
    "description": "Opera extension to manage certain actions of Youtube Playlists and more...",
    "developer":
    {
        "name": "Carlos Maldonado",
        "url": "https://github.com/CarlosGMI"
    },

    "permissions": ["identity", "http://*/*", "https://*/*"],
    "background":
    {
        "scripts": ["Scripts/background.js"],
        "persistent": false
    },
    "browser_action":
    {
        "default_icon": "Media/ypeicon.png",
        "default_title": "YPE",
        "default_popup": "Content/popup.html"
    },
    "oauth2":
    {
        "client_id": "1068019676011-i8foh6s791hgvalphsesukblafn6src8.apps.googleusercontent.com",
        "scopes": ["https://www.googleapis.com/auth/youtube"]
    }
}